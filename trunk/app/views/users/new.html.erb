<%= page_title '신규 가입' %>

<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>

<%= f.text_field :login %>
<%= f.text_field :email %>
<%= f.password_field :password %>
<%= f.password_field :password_confirmation %>

<hr class="space"/>

<p><%= submit_tag 'Sign up' %></p>
<% end -%>
